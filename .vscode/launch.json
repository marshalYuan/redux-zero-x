    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
              "--config",
              "${workspaceRoot}/config/jest.json",
              "--runInBand"
            ],
            "sourceMaps": true,
            "outFiles": [
              "${workspaceRoot}/build/**/*"
            ]
          }
    ]
}